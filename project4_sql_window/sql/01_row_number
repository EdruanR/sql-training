
-- Listar todos los clientes, y darles un ranking (por pa√≠s)--
WITH customer_spending AS (
    SELECT 
        c.customer_id,
        c.first_name || ' ' || c.last_name AS customer_name,
        c.country,
        SUM(i.total) AS total_spent
    FROM customer c
    INNER JOIN invoice i 
        ON c.customer_id = i.customer_id
    GROUP BY c.customer_id, customer_name, c.country
)
SELECT 
    country,
    customer_name,
    total_spent,
    ROW_NUMBER() OVER (PARTITION BY country ORDER BY total_spent DESC) AS fila_ranking
FROM customer_spending
ORDER BY country, fila_ranking;